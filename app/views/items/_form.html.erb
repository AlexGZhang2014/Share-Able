<% if item.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(item.errors.count, "error") %> prevented you from creating your item:</h2>
    <ul>
    <% item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for item do |i| %>
  <%= i.hidden_field :collection_id %>

  <%= i.label :name %><br>
  <%= i.text_field :name %>
  <br><br>
  <%= i.label :description %><br>
  <%= i.text_area :description %>
  <br><br>
  <%= i.submit %>
<% end %>
