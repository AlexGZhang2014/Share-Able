<div id="login">
  <h1>Log into your account</h1>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  <br>
  <%= form_tag("/login") do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <br><br>
    <%= label_tag :password, "Password:" %>
    <%= password_field_tag :password %>
    <br><br>
    <%= submit_tag "Log In" %>
  <% end %>
  <br>
  <%= button_to "Return to the homepage", root_path, method: :get %>
</div>
