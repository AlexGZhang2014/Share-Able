<div id="signup">
  <h1>Create a new account below</h1>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prevented you from creating your account:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= render partial: "form", locals: {user: @user} %>
  <br>
  <%= button_to "Return to the homepage", root_path, method: :get %>
</div>
